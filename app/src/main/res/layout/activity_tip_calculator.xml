<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="#8E8E93">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#8E8E93">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8E8E93">

            <TextView android:text="Total sum"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/edtBillAmount"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:hint="@string/totoal_sum_hint"
                android:inputType="numberDecimal"
                android:background="@drawable/rounded_edittext"
                android:textSize="18sp"
                android:layout_marginLeft="15sp"
                android:layout_marginRight = "15dip"
                android:padding="10dp"
                />

        </LinearLayout>

        <CheckBox android:id="@+id/chkRound"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Round up"
            />


        <Button android:id="@+id/btnCalculate"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:text="Tip"
            android:onClick="calctip"
            />


        <TextView android:id="@+id/txtTipResult"
            android:text="Total sum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:layout_marginTop="15dip"
            android:layout_gravity="center_horizontal"/>

    </LinearLayout>

</RelativeLayout>
